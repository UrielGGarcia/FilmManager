<Page x:Class="FilmManager.ViewCreate.ViewCreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FilmManager.ViewCreate"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="ViewCreatePage" Height="550" Width="950">
        <Grid Margin="15">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Columna Izquierda -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="ID Película:" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10" IsReadOnly="True"
                           Text="{Binding CurrentFilm.film_id}"/>
                    
                    <TextBlock Text="Título:" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10"
                           Text="{Binding CurrentFilm.title}"/>
                    
                    <TextBlock Text="Año lanzamiento:" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10"
                           Text="{Binding CurrentFilm.release_year}"/>
                    
                    <TextBlock Text="ID Idioma principal:" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10"
                           Text="{Binding CurrentFilm.language_id}"/>
                    
                    <TextBlock Text="ID Idioma original:" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10"
                           Text="{Binding CurrentFilm.original_language_id}"/>
                </StackPanel>

                <!-- Columna Derecha -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="Descripción:" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10" Height="80" AcceptsReturn="True"
                           Text="{Binding CurrentFilm.description}"/>
                    
                    <UniformGrid Columns="2" Margin="0,10">
                        <StackPanel>
                            <TextBlock Text="Duración renta (días)"/>
                            <TextBox Margin="0,5"
                                   Text="{Binding CurrentFilm.rental_duration}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Tarifa renta"/>
                            <TextBox Margin="0,5"
                                   Text="{Binding CurrentFilm.rental_rate}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Duración (minutos)"/>
                            <TextBox Margin="0,5"
                                   Text="{Binding CurrentFilm.length}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Costo reemplazo"/>
                            <TextBox Margin="0,5"
                                   Text="{Binding CurrentFilm.replacement_cost}"/>
                        </StackPanel>
                    </UniformGrid>

                    <TextBlock Text="Clasificación (ej: PG-13):" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10"
                           Text="{Binding CurrentFilm.rating}"/>

                    <TextBlock Text="Características especiales:" Margin="0,5"/>
                    <TextBox Margin="0,0,0,10" Height="60"
                           Text="{Binding CurrentFilm.special_features}"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Button Content="Crear" 
                Width="160" Height="40" 
                Margin="0,20,0,0" Padding="15,2"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Command="{Binding UpdateFilmCommand}"
                Style="{StaticResource PrimaryButtonStyle}"/>
    </Grid>

</Page>
